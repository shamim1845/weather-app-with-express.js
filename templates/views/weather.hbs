    <link rel="stylesheet" href="css/style.css">
    <title>Express Web App</title>
  </head>
  <body>
      <!-- Navbar start -->
      {{> navbar}}
    <!-- Navbar end -->

    <!-- Hero area start -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form action="" class="temp_form">
                        <input type="text" id="cityname" placeholder="Enter your city name" autocomplete="off"> 
                        <input type="submit" value="Search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">13 Oct</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get output here</p>
                        <div class="middle_layer " id="data_hide">
                            <p id="temp"><span>0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="bi bi-cloud-fill"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero area end -->

<!-- footer -->
